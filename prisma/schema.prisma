// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  sessions      Session[]
  questions     Question[] // Add this line to establish a relation
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Question {
  id             Int      @id @default(autoincrement())
  question       String
  answer         String?
  possibleAnswers String[]  // Array to store possible answers
  createdAt      DateTime @default(now())
  userEmail      String
  questionType   String   @default("yesNo") // Add a default value
  refreshTime    Int      @default(30) 
  lastRefreshed  DateTime @default(now()) 
  qrAnswers      QrAnswer[]
  user           User     @relation(fields: [userEmail], references: [email])
}

model QrAnswer {
  id              Int @id @default(autoincrement())
  question_id     Int
  answerName      String
  answerEmail     String
  answer          Boolean
  createdAt       DateTime @default(now())
  question        Question @relation(fields: [question_id], references: [id])
}

model param {
  id        Int       @id @default(autoincrement())
  baselink  String    
}